---
import Layout from "@layouts/Default.astro";
import HeroMain from "@components/hero/HeroMain.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import Container from "@components/section/Container.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import IconBlock from "@components/content/IconBlock.astro";
import Toolbar from "@components/content/doctors/grid/Toolbar.astro";
import Filters from "@components/content/doctors/grid/Filters.astro";
import Grid from "@components/content/doctors/grid/Grid.astro";
---

<Layout title="Home">
  <HeroMain />

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Reliable Medical Equipment for Your Needs"
        subtitle="From advanced diagnostic tools to essential healthcare equipment, we provide high-quality solutions for hospitals, clinics, and laboratories."
        minititle="Explore Our Equipment Categories"
        class="'mx-auto text-center'"
      />

      <div
        class="grid md:grid-cols-3 ltablet:grid-cols-3 lg:grid-cols-3 gap-x-6 gap-y-12"
        x-intersect="activeStep = ''"
      >
        <div>
          <IconBlock
            title="Diagnostic Equipment"
            text="From X-ray machines to ultrasound devices, we offer high-quality diagnostic equipment to help healthcare professionals provide accurate diagnoses."
            icon="ph:stethoscope-duotone"
            class="'text-primary-600'"
          />
        </div>

        <div>
          <IconBlock
            title="Surgical Instruments"
            text="Our range of precise and durable surgical instruments ensures the best performance for surgeries, backed by trusted brands."
            icon="ph:scissors-duotone"
            class="'text-rose-500'"
          />
        </div>

        <div>
          <IconBlock
            title="Laboratory Equipment"
            text="We supply state-of-the-art lab equipment including microscopes, centrifuges, and autoclaves for accurate testing and research."
            icon="ph:flask-duotone"
            class="'text-primary-600'"
          />
        </div>

        <div>
          <IconBlock
            title="Patient Monitoring Systems"
            text="Our reliable patient monitoring systems provide real-time data to ensure continuous observation of vital signs during treatment."
            icon="ph:heartbeat-duotone"
            class="'text-rose-500'"
          />
        </div>

        <div>
          <IconBlock
            title="Medical Furniture"
            text="From adjustable hospital beds to ergonomic exam chairs, we offer a selection of medical furniture designed for comfort and functionality."
            icon="ph:bed-duotone"
            class="'text-primary-600'"
          />
        </div>

        <div>
          <IconBlock
            title="Medical Consumables"
            text="We provide a wide range of medical consumables, including gloves, syringes, bandages, and PPE, ensuring youâ€™re always stocked with essential supplies."
            icon="ph:pill-duotone"
            class="'text-primary-600'"
          />
        </div>
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted class="'border-b border-muted-200 dark:border-muted-800'">
    <Container>
      <SectionTitle
        title="High-Quality Medical Equipment"
        subtitle="Providing hospitals, clinics, and laboratories with reliable and advanced medical equipment for optimal patient care."
        minititle="Medical Equipment Solutions"
        class="'mx-auto text-center text-primary-600'"
      />

      <div id="doctors" x-data="doctors()" x-intersect="activeStep = 'spy-1'">
        <Toolbar />

        <div class="py-10">
          <div class="grid grid-cols-12 md:gap-12 pb-20">
            <div class="hidden lg:block col-span-12 lg:col-span-3">
              <Filters />
            </div>
            <div class="col-span-12 lg:col-span-9">
              <Grid />
            </div>
          </div>
        </div>
      </div>
    </Container>
  </SectionMuted>
</Layout>
